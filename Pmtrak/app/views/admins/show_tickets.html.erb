<h1>All Tickets</h1>

<table>
  <thead>
    <tr>
      <th>Ticket ID</th>
      <th>Passenger</th>
      <th>Train</th>
      <!-- Add more ticket attributes as needed -->
    </tr>
  </thead>
  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.id %></td>
        <td><%= ticket.passenger.name %></td>
        <td><%= ticket.train.train_number %></td>
        <!-- Add more ticket details here -->
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'Back', admin_path(@admin) %>
